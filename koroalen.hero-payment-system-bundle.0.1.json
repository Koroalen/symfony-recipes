{
  "manifests": {
    "koroalen/hero-payment-system-bundle": {
      "manifest": {
        "bundles": {
          "Hero\\PaymentSystem\\PaymentSystemBundle\\PaymentSystemBundle": [
            "all"
          ]
        },
        "copy-from-package": {
          "config/routes/payment_system.yaml": "%CONF_DIR%/routes/payment_system.yaml"
        },
        "copy-from-recipe": {
          "config/": "%CONFIG_DIR%/"
        },
        "composer-scripts": {
          "./bin/console cache:clear": "script",
          "cache:clear": "symfony-cmd"
        }
      },

      "ref": "echo bin2hex(random_bytes(20));"
    }
  }
}
